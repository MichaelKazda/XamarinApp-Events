<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventsApp.App">
    <Application.Resources>
        <ResourceDictionary>

            <OnPlatform x:TypeArguments="x:String" x:Key="DroidSansMono">
                <On Platform="Android" Value="DroidSansMono.tff"/>
            </OnPlatform>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#4a2ca8"/>
                <Setter Property="BarTextColor" Value="#ffffff"/>
            </Style>

            <Color x:Key="WhiteColor">#fff</Color>
            <Color x:Key="BlackColor">#000</Color>
            <Color x:Key="PurpleColor">#4a2ca8</Color>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>